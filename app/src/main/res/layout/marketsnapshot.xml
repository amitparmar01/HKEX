<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.hkex.soma.basic.ClickControlContainer
        android:id="@+id/portfolioContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="invisible" />

    <com.hkex.soma.basic.ClickControlContainer
        android:id="@+id/menuContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/appContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bgwhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="@drawable/bg_header"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/btn_menu" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/title_marketsnapshot"
                android:textColor="@color/textblue"
                android:textSize="22.0sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/btn_portfolio" />
        </LinearLayout>

        <com.hkex.soma.basic.ClickControlContainer
            android:id="@+id/clickControlContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TabHost
                android:id="@android:id/tabhost"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/tickerWebView"
                        android:layout_width="fill_parent"
                        android:layout_height="32.0dip"
                        android:visibility="gone" />

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bgblue"
                        android:orientation="horizontal" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="0.0dip"
                        android:layout_height="0.0dip"
                        android:layout_weight="0.0" />

                    <FrameLayout
                        android:id="@+id/realtabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:scrollbars="vertical" />

                    <LinearLayout
                        android:id="@+id/footerContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </TabHost>
        </com.hkex.soma.basic.ClickControlContainer>
    </LinearLayout>
</RelativeLayout>