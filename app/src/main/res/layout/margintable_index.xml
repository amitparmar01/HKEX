<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="187.0dip"
            android:background="@drawable/bg_margin_table_index_option"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stock_but"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/long_type_left_on"
                        android:gravity="center"
                        android:text="@string/stockoptions"
                        android:textColor="@color/textdisable"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/index_but"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/long_type_right_off"
                        android:gravity="center"
                        android:text="@string/indexoptions"
                        android:textColor="@color/textwhite"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="66.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.hkex.soma.element.SelectionList
                    android:id="@+id/selectionListCode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.0dip"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/date"
                        android:textColor="@color/textwhite"
                        android:textSize="12.0sp" />

                    <com.hkex.soma.element.SelectionList
                        android:id="@+id/selectionListDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="5.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/expiry"
                        android:textColor="@color/textwhite"
                        android:textSize="12.0sp" />

                    <com.hkex.soma.element.SelectionList
                        android:id="@+id/selectionListExpiry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="5.0dip" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/position"
                        android:textColor="@color/textwhite"
                        android:textSize="12.0sp" />

                    <com.hkex.soma.element.SelectionList
                        android:id="@+id/selectionListPosition"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="5.0dip" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_header1"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:background="@drawable/list_header"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33">

                <TextView
                    android:id="@+id/head_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/call"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33">

                <TextView
                    android:id="@+id/head_strike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/strike4cal"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33">

                <TextView
                    android:id="@+id/head_put"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/put"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <com.hkex.soma.basic.MultiScrollListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#ffffffff"
            android:dividerHeight="0.0px" />
    </LinearLayout>
</RelativeLayout>