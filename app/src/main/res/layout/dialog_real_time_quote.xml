<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="282.0dip"
    android:layout_height="218.0dip"
    android:layout_centerInParent="true"
    android:background="@drawable/bg_real_time"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="282.0dip"
        android:layout_height="218.0dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="37.0dip">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/title_realtimequote"
                android:textColor="@color/white"
                android:textSize="18.0dip"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/close_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:padding="10.0dip"
                android:src="@drawable/icon_real_time_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="142.0dip"
            android:layout_marginTop="6.0dip"
            android:orientation="vertical"
            android:paddingLeft="15.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="15.0dip"
            android:paddingBottom="2.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/last_str"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text="@string/last_price"
                    android:textColor="@color/textlightgrey" />

                <TextView
                    android:id="@+id/last1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="-"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text=""
                    android:textColor="@color/textlightgrey" />

                <TextView
                    android:id="@+id/last2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="-"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bid_ask_str"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text="@string/sslist1"
                    android:textColor="@color/textlightgrey" />

                <TextView
                    android:id="@+id/bid_ask"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="-"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/high_str"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text="@string/high"
                    android:textColor="@color/textlightgrey" />

                <TextView
                    android:id="@+id/high"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="-"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/low_str"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text="@string/low"
                    android:textColor="@color/textlightgrey" />

                <TextView
                    android:id="@+id/low"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="-"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vol_str"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:text="@string/volume"
                    android:textColor="@color/textlightgrey" />

                <TextView
                    android:id="@+id/vol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:text="-"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="33.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="10.0dip">

            <ImageButton
                android:id="@+id/reload_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:padding="7.0dip"
                android:src="@drawable/icon_real_time_reload" />

            <TextView
                android:id="@+id/update_time_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/reload_but"
                android:text="@string/lastupdate"
                android:textColor="@color/textlightgrey" />

            <TextView
                android:id="@+id/update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/update_time_str"
                android:text=" -"
                android:textColor="@color/textlightgrey" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>