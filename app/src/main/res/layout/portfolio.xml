<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgwhite">

    <com.hkex.soma.basic.ClickControlContainer
        android:id="@+id/menuContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/appContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bgwhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="@drawable/bg_header"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/btn_menu" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/title_portfolio"
                android:textColor="@color/textblue"
                android:textSize="22.0sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:src="@drawable/btn_edit_e" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_header1"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:background="@drawable/list_header"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/head_instrument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="@string/head_instrument2"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="55.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/head_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_lastd"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/head_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_qty"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/head_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_cost"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="75.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/head_gainloss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_gainloss"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_header2"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:background="@drawable/list_header"
            android:baselineAligned="false"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="35.0dip"
                android:layout_height="fill_parent"
                android:clickable="true" />

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:text="@string/head_instrument2"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="55.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_lastd"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_qty"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="45.0dip"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_cost"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="70.0dip"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/head_gainloss"
                    android:textColor="@color/textwhite"
                    android:textSize="12.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35.0dip"
                android:layout_height="fill_parent"
                android:clickable="true" />
        </LinearLayout>

        <com.hkex.soma.basic.ClickControlContainer
            android:id="@+id/clickControlContainer"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <RelativeLayout
            android:id="@+id/controlPanel"
            android:layout_width="fill_parent"
            android:layout_height="46.0dip"
            android:background="@drawable/bg_footer_panel"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_selectall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:paddingLeft="8.0dip"
                android:src="@drawable/btn_selectall_e" />

            <ImageButton
                android:id="@+id/btn_selectnone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_selectall"
                android:background="@color/transparent"
                android:paddingLeft="8.0dip"
                android:src="@drawable/btn_selectnone_e" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:paddingRight="8.0dip"
                android:src="@drawable/btn_delete_e" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/footerContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>