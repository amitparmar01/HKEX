                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout android:clickable="true" android:layout_width="35dp" android:layout_height="match_parent"/>
        </LinearLayout>
        <com.hkex.soma.basic.ClickControlContainer android:id="@+id/clickControlContainer" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <RelativeLayout android:orientation="vertical" android:id="@+id/controlPanel" android:background="@drawable/bg_footer_panel" android:visibility="gone" android:layout_width="match_parent" android:layout_height="46dp">
            <ImageButton android:id="@+id/btn_selectall" android:background="@color/transparent" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_selectall_e" android:layout_centerVertical="true"/>
            <ImageButton android:id="@+id/btn_selectnone" android:background="@color/transparent" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_selectnone_e" android:layout_toRightOf="@+id/btn_selectall" android:layout_centerVertical="true"/>
            <ImageButton android:id="@+id/btn_delete" android:background="@color/transparent" android:paddingRight="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_delete_e" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:textColor="@color/textblack" android:id="@+id/footer_msg" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/profile_footer_msg"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/footerContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
