            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/list_header2" android:background="@drawable/list_header" android:visibility="gone" android:layout_width="match_parent" android:layout_height="34dp" android:baselineAligned="false">
            <RelativeLayout android:clickable="true" android:layout_width="35dp" android:layout_height="match_parent"/>
            <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <RelativeLayout android:gravity="center_vertical" android:paddingLeft="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/textwhite" android:ellipsize="end" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/head_instrument2" android:maxLines="2" android:layout_alignParentLeft="true"/>
                </RelativeLayout>
                <RelativeLayout android:gravity="center" android:layout_width="75dp" android:layout_height="match_parent">
                    <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/textwhite" android:ellipsize="end" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/expiry_month" android:maxLines="2" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
