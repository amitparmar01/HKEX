            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="30dp" android:layout_height="match_parent">
                <TextView android:textSize="12sp" android:textStyle="bold" android:textColor="@color/textwhite" android:ellipsize="end" android:gravity="center" android:id="@+id/head_qty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/head_qty" android:maxLines="2" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="70dp" android:layout_height="match_parent">
